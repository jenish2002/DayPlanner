<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/puThemeColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/theme_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ellipsize="middle"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Theme Color"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/theme_sp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="#E3E3E3" />

    <RelativeLayout
        android:id="@+id/theme_white"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/pressed"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:onClick="onThemeWhite">

        <ImageView
            android:id="@+id/ar_iv1"
            android:layout_width="25dp"
            android:layout_height="55dp"
            android:visibility="visible"
            app:srcCompat="@drawable/keyboard_arrow_right_blue" />

        <TextView
            android:id="@+id/theme_tvWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/ar_iv1"
            android:ellipsize="middle"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="White"
            android:textColor="@color/LightBlue"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/theme_sp2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3E3E3" />

    <RelativeLayout
        android:id="@+id/theme_black"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/pressed"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:onClick="onThemeBlack">

        <ImageView
            android:id="@+id/ar_iv2"
            android:layout_width="25dp"
            android:layout_height="55dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/keyboard_arrow_right_blue" />

        <TextView
            android:id="@+id/theme_tvBlack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/ar_iv2"
            android:ellipsize="middle"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Black"
            android:textColor="@color/Black"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sp3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3E3E3" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/pressed"
        android:clickable="true"
        android:ellipsize="middle"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:onClick="onCancel"
        android:padding="15dp"
        android:text="Cancel"
        android:textColor="#000000"
        android:textSize="18sp" />
</LinearLayout>